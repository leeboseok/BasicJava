package exam;

import java.util.Scanner;

public class Sample2 {
	public static void main(String[] args) {
		Student s=new Student("이보석",90,88,86);
		s.show();
		System.out.println(s);
		
	}//main end
}//class end
class Student{
	
	String name;
	int mathGrade;
	int englishGrade;
	int koreanGrade;
	//객체를 만들때는 생성자 중 하나만 선택해서 조립하게 된다.
	Student(String str, int m, int e, int k){
		name=str;	
		mathGrade=m;	
		englishGrade=e;	
		koreanGrade=k;
		System.out.println("이름: "+str+"\t"+"수학: "+mathGrade+"\t"+"영어: "+englishGrade+"\t"+"국어: "+koreanGrade);
	}//Student end
	void show() {
		System.out.println("이름: "+name+"\t"+"수학: "+mathGrade+"\t"+"영어: "+englishGrade+"\t"+"국어: "+koreanGrade);
	}
}//class end