class Student{
	void run(String str, int m, int e, int k) {
		
	}
	String name;
	int mathGrade;
	int englishGrade;
	int koreanGrade;
	//객체를 만들때는 생성자 중 하나만 선택해서 조립하게 된다.
	Student(String str, int m, int e, int k){
		name=str;	
		mathGrade=m;	
		englishGrade=e;	
		koreanGrade=k;
		System.out.println("이름: "+str+"\t"+"수학: "+mathGrade+"\t"+"영어: "+englishGrade+"\t"+"국어: "+koreanGrade);
	}//Student end
}//class end